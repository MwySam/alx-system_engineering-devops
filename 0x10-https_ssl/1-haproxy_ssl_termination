global
        log /dev/log    local0
	stats socket /run/haproxy/admin.sock mode 660 level admin

defaults
        log     global
        mode    http
        option  httplog
	timeout connect  10s
	timeout client  30s
	timeout server  30s

frontend th3gr00t-tech-frontend
	 bind *:80
	 bind *:443 ssl crt /etc/haproxy/certs/mwysam.tech.pem
	 http-request redirect scheme https unless { ssl_fc }
	 http-request set-header X-Forwarded-Proto https
	 default_backend th3gr00t-tech-backend

backend mwysam-tech-backend
	balance roundrobin
	server 453-web-01 34.75.110.80:80 check
	server 453-web-02 3.235.229.195:80 check